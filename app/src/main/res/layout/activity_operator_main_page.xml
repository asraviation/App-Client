<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:theme="@style/Base.Theme.ASRAviation"
    tools:context=".operator.OperatorMainPage">

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fr_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/opbottomnav1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bottom_nav"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/logintext"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/black"
        app:itemActiveIndicatorStyle="@color/bottomchecked"
        android:layout_marginBottom="@dimen/_10sdp"
        app:menu="@menu/operatorbottomnav" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
